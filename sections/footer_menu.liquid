{{ 'footer_menu.css' | asset_url | stylesheet_tag }}

<section class="footer py-10 md:px-24 px-8">
  <div class="container w-full flex justify-between my-0 md:my-16 flex-wrap-reverse">
    <div class="md:w-3/5 w-full flex justify-start flex-wrap mb-5">
      {% for link in section.settings.footer_menu.links %}
        <div class="my-6 mr-14">
          <a class="mb-2 font-extrabold text-base md:text-lg" href="{{link.url}}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
            {% for child_link in link.links %}
              <a class="text-m text-gray-500" href="{{child_link.url}}">{{ child_link.title }}</a>
            {% endfor %}
          {% endif %}
        </div>
      {% endfor %}
      <div class="my-6 mr-14">
        <h4 class="mb-2 font-extrabold text-base md:text-lg">Contact</h4>
        {% for block in section.blocks limit: 1 %}
          <p class="text-m text-gray-500">Do you have any questions or suggestions ?</p>
          <a href="#" class="text-m font-bold underline">{{ block.settings.navbar_email }}</a>
          <p class="text-m text-gray-500 mt-4">Do you need support ? Give us a call</p>
          <p class="text-m font-bold">{{ block.settings.navbar_contact_number }}</p>
        {% endfor %}
      </div>
    </div>
    {% for block in section.blocks limit: 1 %}
      <div class="my-6 mx-24 md:mx-0 flex justify-end">
        <img
          src="{{block.settings.footer_image|image_url}}"
          alt="footer-image"
          class="lg:h-2/5 md:h-1/4 h-full w-full" />
      </div>
    {% endfor %}
  </div>
  <div className="border-t-2 pt-10 flex flex-wrap justify-between content-center text-gray-400 text-xs  ">
    <span className="my-2">2022 All rights reserved</span>
    <div className="flex flex-wrap justify-between my-2 mx-10 md:mx-0 ">
      <a href="#">
        <img
          alt="newsletter"
          className="w-10 h-10 mx-2 my-2"
          src="../assets/Group 19.png" />
      </a>

      <a href="#">
        <img
          alt="newsletter"
          className="w-10 h-10 mx-2 my-2"
          src="../assets/Group 20.png" />
      </a>

      <a href="#">
        <img
          alt="newsletter"
          className="w-10 h-10 mx-2 my-2"
          src="../assets/Group 21.png" />
      </a>

      <a href="#">
        <img
          alt="newsletter"
          className="w-10 h-10 mx-2 my-2"
          src="../assets/Group 22.png" />
      </a>
    </div>
    <div className="md:w-1/5 w-full flex flex-wrap justify-between">
      <a href="#" className="my-2">
        Privacy Policy
      </a>
      <a href="#" className="my-2">
        Terms of Service
      </a>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "footer-menu",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_menu",
        "default": "main-menu",
        "label": "Footer Menu"
      }
    ],
    "blocks": [
      {
        "name": "Footer Image and Contact Details",
        "type": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "footer_image",
            "label": "Image for Footer"
          }, {
            "type": "text",
            "id": "navbar_email",
            "label": "Enter your email :"
          }, {
            "type": "text",
            "id": "navbar_contact_number",
            "label": "Enter your contact number :"
          }
        ]
      }
    ]
  }
{%endschema%}