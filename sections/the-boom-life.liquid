<section class="boom-life-stories">
  <div class="container mx-auto py-5 md:py-14">
    <div class="flex flex-col items-center justify-center stories-title">
      <h1 class="px-10 mt-8 text-3xl font-extrabold title-font sm:text-3xl lg:text-5xl text-lightBrown">{{ section.settings.heading_text }}</h1>
      <p class="w-auto mt-3 mb-8 leading-relaxed lg:text-xl 2xl:text-2xl text-lightBrown md:py-0">{{ section.settings.sub_heading_text }}</p>
    </div>
  <div class="flex flex-col flex-wrap justify-center w-10/12 mx-auto stories md:flex-row md:w-full lg:w-10/12">
    {% for block in section.blocks %}
      <div class="p-4 md:w-1/3 sm:mb-0 mb-6 cursor-pointer">
        <div class="rounded-md overflow-hidden">
          <img
          src="{{block.settings.the_boom_life_image|image_url}}"
          alt="The_Boom_Life_Image" 
          class="object-cover object-center h-full w-full"
          />
        </div>
          <p class="mt-4 font-semibold text-red-500">{{ block.settings.the_boom_life_topic }}</p>
          <h2 class="text-2xl font-extrabold title-font mt-2 text-base-color">{{ block.settings.the_boom_life_card_heading }}</h2>
          <p class="text-base-color text-sm opacity-60 leading-relaxed mt-2">{{ block.settings.the_boom_life_card_text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "The Boom Life Section",
    "settings": [
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text",
        "default": "The Boom Life"
      }, {
        "type": "textarea",
        "id": "sub_heading_text",
        "label": "Sub-Heading Text",
        "default": "Don't miss out our incredible stories"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "The Boom Life Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "the_boom_life_image",
            "label": "The Boom Life Image"
          }, {
            "type": "text",
            "id": "the_boom_life_topic",
            "label": "Topic of the card",
            "default": "The Boom Life Card Topic"
          }, {
            "type": "text",
            "id": "the_boom_life_card_heading",
            "label": "The Boom Life Card Heading",
            "default": "The Boom Life Card"
          }, {
            "type": "textarea",
            "id": "the_boom_life_card_text",
            "label": "The Boom Life Card Text",
            "default": "The Boom Life Card Text"
          }
        ]
      }
    ]
  }
{%endschema%}