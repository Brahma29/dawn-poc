{{ 'nav-bar.css' | asset_url | stylesheet_tag }}

<header>
  <div class="container flex flex-wrap items-center px-5 py-5 mx-auto md:flex-row">
    <nav class="flex flex-wrap items-center order-1 py-4 text-base font-semibold lg:w-2/5 text-base-color md:ml-auto sm:order-none grow md:border-none">
      {% for link in section.settings.navbar_menu.links limit: 3 %}
        {% if link.links.size > 0 %}
          <div class="relative cursor-pointer category-dropdown">
            <a class="flex items-center mr-4 category-btn md:mr-9 hover:text-gray-900" href="{{link.url}}">{{ link.title }}<span class="ml-2 opacity-80">&#8897;</span>
            </a>
            <div class="absolute left-0 invisible w-full px-3 py-3 text-white rounded opacity-0 dropdown-menu top-100 bg-lightSlateGray">
              <ul>
                {% for child_link in link.links %}
                  <li class="my-2">
                    <a href="{{child_link.url}}">{{ child_link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        {% else %}
          <a class="mr-4 cursor-pointer md:mr-9 hover:text-gray-900" href="{{link.url}}">{{ link.title }}</a>
        {% endif %}
      {% endfor %}
    </nav>

    {% for block in section.blocks limit: 1 %}
      <a class="flex flex-col items-center order-first font-medium lg:order-none lg:w-1/5 title-font lg:items-center lg:justify-center ">
        <img
          class="navbar-image"
          src="{{block.settings.navbar_image|image_url}}"
          alt="navbar-image" />
      </a>
    {% endfor %}

    <div class="inline-flex justify-end flex-1 ml-5 lg:w-2/5 lg:ml-0 md:flex-none">
      <div class="flex nav-icons">
        <div class="ml-6 cursor-pointer icon">
          <img
            src="https://cdns.iconmonstr.com/wp-content/releases/preview/2018/240/iconmonstr-search-thin.png"
            alt="search_icon"
            class="w-5 h-5" />
        </div>
        <div class="ml-6 cursor-pointer icon">
          <img
            src="data:image/png;base64,"
            alt="user_icon"
            class="w-5 h-5" />
        </div>
        <div>
          <img
            src="https://cdn.icon-icons.com/icons2/2582/PNG/512/shopping_bag_icon_153998.png"
            alt="cart_icon"
            class="w-5 h-5" />
        </div>
      </div>
    </div>
  </div>
</header>


{% schema %}
  {
    "name": "navbar-menu",
    "settings": [
      {
        "type": "link_list",
        "id": "navbar_menu",
        "default": "main-menu",
        "label": "Navigation Bar Menu"
      }
    ],
    "blocks": [
      {
        "name": "images",
        "type": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "navbar_image",
            "label": "Image for Navbar"
          }
        ]
      }
    ]
  }
{%endschema%}