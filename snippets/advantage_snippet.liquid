{% if advantage_snippet != empty %}
  {%-  liquid  
    assign ratio = 1
    if media_aspect_ratio == 'portrait'
        assign ratio = 0.8
    elsif media_aspect_ratio == 'adapt'
        assign ratio = 1.777
    endif
    if ratio==0 or ratio==null
        assign ratio = 1
    endif
-%}

  <div
    class="
    {% if advantage_snippet.card_image == nil %}
      ratio
    {% endif %}
    "
    style="--ratio-percent :{{1 | divided_by: ratio | times:100 }}%;">
    <img
      srcset="{%- if card_product.featured_media.width >= 165 -%}
      {{ card_image.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
    {%- if card_product.featured_media.width >= 360 -%}
      {{ card_image.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
    {%- if card_product.featured_media.width >= 533 -%}
      {{ card_image.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
    {%- if card_product.featured_media.width >= 720 -%}
      {{ card_image.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
    {%- if card_product.featured_media.width >= 940 -%}
      {{ card_image.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
    {%- if card_product.featured_media.width >= 1066 -%}
      {{ card_image.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
    {{ card_product.featured_media | image_url }} {{ card_image.featured_media.width }}w
                "

    src="{{card_image.featured_media | image_url : width:533}}"
    alt="{{ card_image.featured_media.alt | escape }}"
    width="{{card_image.featured_media.width}}"
    height="{{card_image.featured_media.height}}">
  </div>

{% endif %}